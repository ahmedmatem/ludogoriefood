@model LudogorieFood.Web.ViewModels.Home.HomePageViewModel

@{
    ViewBag.Title = "Начало";
    var slidesPath = LudogorieFood.Web.Common.GlobalConstants.SliderImagesPath;
}

<!--  Slider: Outer wrapper for presentation only, this can be anything you like -->
<div class="row">
    <div class="col-md-9">
        <!-- start Basic Jquery Slider -->
        <div id="wrapper">
            <ul class="bjqs">
                @foreach (var slide in Model.Slides)
            {
                var imgSrc = slidesPath + "/" + slide.PictureName + "." + slide.PictureType;
                    <li>
                        <img src="@Url.Content(imgSrc)" title="Automatically generated caption">
                    </li>
                }
            </ul>
        </div>
        <!-- end Basic jQuery Slider -->
    </div>
    <div class="col-md-3>">
        Aside
    </div>
</div>
<!-- End outer wrapper -->

@section scripts{
    <script src="~/Scripts/bjqs.js"></script>
    <script class="secret-source">
        jQuery(document).ready(function($) {
            $('#wrapper').bjqs({
                //animtype: 'slide',
                height      : 320,
                width       : 1000,
                responsive: true,
                showmarkers: false
          });
        });
    </script>
}