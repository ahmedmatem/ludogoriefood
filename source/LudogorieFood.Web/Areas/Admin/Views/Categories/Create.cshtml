@model LudogorieFood.Web.Areas.Admin.ViewModels.Shop.CategoryViewModel
@{
    ViewBag.Title = "Shop - Create category";
}

@Html.Partial("_ANavigationPartial", ViewData["ActiveMenuName"])

@using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <h4>Create new category</h4>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-4">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-4">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
}

